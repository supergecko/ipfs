
.box {position: relative;height: 70px;padding: 0;margin: 0;width: 90%;display: block;}
.box .label {position: absolute;left: 0;top: 24px;font-size: 16px;color: #999;-webkit-transition-duration: .2s;transition-duration: .2s;}
.box .label.labelfocus {top: 5px;-webkit-transition-duration: .2s;transition-duration: .2s;font-size: 10px;color: #aaa;}
.box .inputitem {width: 100%;height: 26px; line-height: 26px;padding: 28px 0 20px 0; -webkit-transition-duration: .2s; transition-duration: .2s;font-size:16px;color: #333;position: absolute;top: 0;left: 0;}
.box .label.labelfocus + .inputitem { -webkit-transition-duration: .1s; transition-duration: .1s;color: #333;}
.box .inval {color: #333;}
.box .label.disabled {width: 100%;height: 70px;z-index: 10;display: block;}

